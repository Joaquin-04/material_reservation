<odoo>
    <!-- Vista en árbol -->
    <record id="view_material_reservation_stage_tree" model="ir.ui.view">
        <field name="name">material.reservation.stage.tree</field>
        <field name="model">material.reservation.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Nombre de Etapa"/>
                <field name="project_number" string="Número de Obra"/>
                <field name="deadline_date" string="Fecha de Entrega"/>
                <field name="project_id" string="Obra Relacionada"/>
                <field name="obra_nr" string="Número de Obra Relacionada"/>
            </tree>
        </field>
    </record>

    <!-- Vista en formulario -->
    <record id="view_material_reservation_stage_form" model="ir.ui.view">
        <field name="name">material.reservation.stage.form</field>
        <field name="model">material.reservation.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Nombre de Etapa"/>
                        <field name="project_number" string="Número de Obra" readonly="1" />
                        <field name="deadline_date" string="Fecha de Entrega"/>
                        <field name="project_id" string="Obra Relacionada" options="{'no_create':True,'no_create_edit':True}"/>
                        <field name="obra_nr" string="Número de Obra Relacionada"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Añade un search view con filtros por nombre, proyecto y activo/inactivo -->
    <!-- 3) Vista de búsqueda -->
    <record id="view_material_reservation_stage_search" model="ir.ui.view">
        <field name="name">material.reservation.stage.search</field>
        <field name="model">material.reservation.stage</field>
        <field name="arch" type="xml">
            <search>
                <!-- Búsqueda por nombre -->
                <field name="name" string="Nombre"/>
                <!-- Búsqueda por proyecto -->
                <field name="project_id" string="Proyecto"/>
                <filter name="archived_filter"
                        string="Archivadas"
                        domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- 4) Acción ventana -->
    <record id="action_material_reservation_stage" model="ir.actions.act_window">
        <field name="name">Etapas de Reserva</field>
        <field name="res_model">material.reservation.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_material_reservation_stage_tree"/>
        <field name="search_view_id" ref="view_material_reservation_stage_search"/>
    </record>

    <!-- Menú en Ventas -->
    <menuitem id="menu_material_reservation_stage"
              name="Etapas de Reservación"
              parent="sale.sale_order_menu"
              action="action_material_reservation_stage"
              sequence="10"/>
</odoo>


